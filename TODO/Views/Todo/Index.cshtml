@model IEnumerable<TODO.Models.Todo>
@using TODO.Models
@using TODO.Enums

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des Todos</h1>

<div>
    <a asp-action="Add" class="btn btn-primary">
        Ajouter un TODO <i class="fa-solid fa-plus"></i>
    </a>
</div>
<div>
    <h4>Nombre des todos: @ViewBag.count</h4>
</div>
<table class="table @(ViewBag.Theme == "dark" ? "table-dark" : "")">
    <thead>
        <tr>
            <th>
                Libelle
            </th>
            <th>
                Description
            </th>
            <th>
                Date de limite
            </th>
            <th>
                Statut
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        var Done = item.Statut == State.DONE;
        var textDecoration = Done ? "text-decoration-line-through" : "";
        <tr>
            <td class="@textDecoration">
                @item.Libelle
            </td>
            <td class="@textDecoration">
                @item.Description
            </td>
            <td class="@textDecoration">
                @item.DateLimite.ToString("dd/MM/yyyy")
            </td>
            <td>
                @item.Statut
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Edit">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete"
                onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce todo ?');" >
                    <i class="fa-solid fa-trash-can"></i>
                </a>
                
            </td>
        </tr>
}
    </tbody>
</table>
